<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.active? %>
      <span class='label label-success'>Active</span>
    <% elsif sale.finished? %>
      <span class='label label-danger'>Finished</span>
    <% elsif sale.upcoming? %>
      <span class='label label-warning'>Upcoming</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
</tr>
