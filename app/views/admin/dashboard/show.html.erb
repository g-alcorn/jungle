<style type="text/css">
  table {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    padding: 0.4%;
  }
  th {
    padding: 10px;
  }
  tr {
    padding: 0.4%;
    border: 1px solid;
  }
  td {
    padding: 0.4%;
    border: 1px solid;
  }
</style>

<section class="admin-category-index">

  <header class="section-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <tbody>
        <tr>
          <th colspan="3">Category</th>
          <th colspan="2">ID Number</th>
        </tr>
        <% @categories.each do |category| %>
          <%= render 'category', category: category %>
        <% end %>
      </tbody>
    </table>

    <table class="admin-dashboard-table">
      <th colspan="5" width="50%">Analytics</th>
      <tr>
        <td colspan="3">Total products: </td>
        <td colspan="2"><%= @data[:product_count]%></td>
      </tr>
      <tr>
        <td colspan="3">Categories: </td>
        <td colspan="2"><%= @data[:category_count]%></td>
      </tr>
    </table>


  </div>
</section>
